<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userinterface.SSImageViewActivity">

    <ImageView
        android:id="@+id/image_view_SS"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/luffy_gear_second"
       app:layout_constraintBottom_toTopOf="@id/btn_change_view"
        android:background="@android:color/holo_red_dark"
        android:layout_margin="20dp"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/btn_change_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/button_change_view"/>


</androidx.constraintlayout.widget.ConstraintLayout>