<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppTest" parent="Theme.Material3.DayNight">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/pail_cyan</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowLightStatusBar">false</item>

        <item name="android:windowBackground">@color/soft_dark</item>

        <item name="textAllCaps">false</item>
        <item name="cardViewStyle">@style/primaryCard</item>


        <!--<item name="android:windowBackground">?android:windowBackground</item>-->


    </style>


    <style name="Theme.AppTest" parent="Base.Theme.AppTest" />
    
    <style name="primaryCard">
        <item name="cardBackgroundColor">@android:color/darker_gray</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="secondaryCard">
        <item name="cardBackgroundColor">@color/pail_cyan</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textStyle">normal</item>
    </style>u

    <style name="Theme.App.Test" parent="Base.Theme.AppTest"/>

